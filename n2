from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from database import init_db
from routers import auth

# –°–æ–∑–¥–∞—Ç—å FastAPI –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ
app = FastAPI(
    title="Gait Analysis API",
    description="API –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞ –ø–æ—Ö–æ–¥–∫–∏ —Å –ø–æ–º–æ—â—å—é IMU —Å–µ–Ω—Å–æ—Ä–æ–≤",
    version="1.0.0",
    docs_url="/docs",
    redoc_url="/redoc"
)

# CORS middleware (–¥–ª—è Flutter web/mobile)
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],  # –í production —É–∫–∞–∂–∏ –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã–µ –¥–æ–º–µ–Ω—ã
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ë–î –ø—Ä–∏ —Å—Ç–∞—Ä—Ç–µ
@app.on_event("startup")
async def startup_event():
    init_db()
    print("‚úÖ Database initialized")
    print("üöÄ Application started!")
    print("üìñ Docs: http://localhost:8000/docs")

# –ü–æ–¥–∫–ª—é—á–∏—Ç—å auth router
app.include_router(auth.router)

# Root endpoint
@app.get("/")
async def root():
    return {
        "message": "Gait Analysis API",
        "version": "1.0.0",
        "docs": "/docs"
    }

# Health check endpoint
@app.get("/health")
async def health_check():
    return {"status": "healthy"}
